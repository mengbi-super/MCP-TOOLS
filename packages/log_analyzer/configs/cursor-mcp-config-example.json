{
  "mcpServers": {
    "log-analyzer-local": {
      "command": "py",
      "args": [
        "${workspaceFolder}/packages/log_analyzer/src/mcp_services/log_analyzer/tool.py"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "LOGBACK_CONFIG_PATH": "${workspaceFolder}/packages/log_analyzer/src/mcp_services/log_analyzer/resources/logback-spring.xml",
        "SPRING_APPLICATION_NAME": "your-app-name",
        "APP_PACKAGE": "com.example.yourpackage",
        "ERROR_LOG_PATH": "${workspaceFolder}/logs/error.log",
        "WARN_LOG_PATH": "${workspaceFolder}/logs/warn.log",
        "ALL_LOG_PATH": "${workspaceFolder}/logs/all.log"
      },
      "description": "日志分析工具（本地开发模式）- 从源码直接运行，支持通过环境变量配置 logback 和日志文件路径"
    },
    "log-analyzer-pypi": {
      "command": "py",
      "args": [
        "-m",
        "mcp_services.log_analyzer.tool"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "SPRING_APPLICATION_NAME": "your-app-name",
        "APP_PACKAGE": "com.example.yourpackage",
        "ERROR_LOG_PATH": "${workspaceFolder}/logs/error.log",
        "WARN_LOG_PATH": "${workspaceFolder}/logs/warn.log",
        "ALL_LOG_PATH": "${workspaceFolder}/logs/all.log"
      },
      "description": "日志分析工具（PyPI 安装模式）- 从 PyPI 安装后使用：pip install mcp-logback-analyzer（如需自定义 logback，可设置 LOGBACK_CONFIG_PATH）"
    }
  }
}
